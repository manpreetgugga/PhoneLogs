<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_1"
    android:background="@android:color/white"
    android:padding="@dimen/dimen_12">

    <RelativeLayout
        android:padding="@dimen/dimen_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12"
            android:layout_marginHorizontal="@dimen/dimen_12"
            android:fontFamily="@font/circularstd_bold"
            android:text="@string/action"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:textColor="@color/black"
            android:text="Please choose and action for Aaai Vodafone"
            android:fontFamily="@font/circularstd"
            android:layout_marginHorizontal="@dimen/dimen_12"
            android:layout_marginVertical="@dimen/dimen_12"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/message"
            android:layout_marginEnd="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_8"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/messageContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_12"
                android:text="Message" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/callContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="call" />

        </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>